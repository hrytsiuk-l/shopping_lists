<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.items.each do |item| %>
      <tr>
        <td><%= item.uid %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', list_item_path(item.list_id, item.uid) %></td>
        <td><%= link_to 'Edit', edit_list_items_path(item.list_id, item.uid) %></td>
        <td><%= link_to 'Destroy', list_item_path(item.list_id, item.uid), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_list_items_path %>
